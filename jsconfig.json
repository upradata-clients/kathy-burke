{
    "compilerOptions": {
        "outDir": "lib-esm",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // "allowJs": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "ESNext",
        "traceResolution": false,
        "baseUrl": ".",
        "paths": {},
        "checkJs": true,
    },
    "include": [
        "js/**/*.js",
        "js/**/*.jsx",
        "js/**/*.mjs",
    ],
    "exclude": [
        "node_modules"
    ]
}